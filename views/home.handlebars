        <input style='margin: 10px 5px 10px 20px' type="radio" id='artist-radio' name="search" class="btn btn-secondary">Artist</input>
        <input style='margin: 10px 5px 10px 20px' type="radio" id='song-radio' name="search" class="btn btn-secondary">Song</input>
